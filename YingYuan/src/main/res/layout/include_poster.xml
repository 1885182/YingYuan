<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_poster_layout_id"
        android:layout_marginTop="@dimen/dp_110"
        android:visibility="gone"
        android:background="@drawable/detail_relative_shape">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:id="@+id/re07">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="剧照"
                android:id="@+id/text5"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_5"/>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_below="@id/text5"
                android:layout_height="@dimen/dp_3"
                android:background="@drawable/banner1_shape"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitXY"
                android:id="@+id/include_poster_back_id"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/com_icon_down_default_xhdpi"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/re07"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/include_poster_image1_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image2_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image3_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image7_id"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/include_poster_image4_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image5_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image6_id"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/include_poster_image8_id"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
