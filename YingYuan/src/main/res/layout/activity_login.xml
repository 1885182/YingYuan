<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_40">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/login_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:backgroundTint="#ccc"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/login_phone_id"
                android:paddingLeft="@dimen/dp_40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_40">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/login_icon_lock_n_hdpi"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:backgroundTint="#ccc"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingLeft="@dimen/dp_40"
                android:id="@+id/login_pwd_id"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/login_icon_eye_n_hdhpi"
                android:layout_alignParentRight="true"
                android:id="@+id/eye_id"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_pwd_id"
                android:layout_marginTop="@dimen/dp_20">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:text="记住密码"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/login_checkbox_pwd_id"
                    android:backgroundTint="#f00"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:text="自动登录"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/login_checkbox_pwd_id"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/login_checkbox_phone_id"
                    android:backgroundTint="#f00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:text="快速注册"
                    android:id="@+id/to_register"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:text="登录"
            android:background="@drawable/button_shape"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="25dp"
            android:id="@+id/intent_login"
            android:textColor="#fff" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#ccc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号快速登录"
                android:textSize="@dimen/sp_10"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#ccc"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/wx_deng_lu_id"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/log_icon_weixin_default_hdpi"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>