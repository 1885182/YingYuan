<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"

        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/backhui"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cinema_logo"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"></com.facebook.drawee.view.SimpleDraweeView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <TextView

                android:id="@+id/cineam_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="hahaha"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_below="@id/cineam_title"
                android:id="@+id/cineam_diess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="hahaha"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/cineam_juli"
                android:layout_below="@id/cineam_diess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="hahaha"
                android:textSize="@dimen/sp_12" />

            <CheckBox
                android:id="@+id/cinema_dianzan"
                android:background="@drawable/follow_selector"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_30"
                android:button="@null"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>