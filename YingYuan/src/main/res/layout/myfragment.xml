<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_250"
    android:background="@mipmap/my_back">

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/My_megess"
        android:src="@mipmap/my_icon_remind_default_xhdpi"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@mipmap/xhdpi"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="哈哈哈哈"
        android:layout_marginBottom="@dimen/dp_24"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/My_button"
        android:background="@drawable/my_button"
        android:layout_marginTop="@dimen/dp_150"
        android:text="签到"
        android:textColor="#ffffff"/>
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_86"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:elevation="20dip"
    android:background="@drawable/backgroup"
    android:orientation="vertical">
      <ImageView
          android:id="@+id/my_xinxi"
          android:layout_width="@dimen/dp_24"
          android:layout_height="@dimen/dp_24"
          android:layout_marginLeft="@dimen/dp_30"
          android:layout_marginTop="@dimen/dp_24"
          android:src="@mipmap/my_icon_messiage_default_xhdpi"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的信息"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
       android:elevation="2dip"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/backgroup"
     >
        <ImageView
            android:id="@+id/my_guanzu"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/my_icon_attention_default_xhdpi"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_54"
            android:text="我的关注"/>

        <ImageView
            android:id="@+id/my_goupiao"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/my_icon_rccord_default_xhdpi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_54"
            android:text="购票记录"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:elevation="2dip"
        android:background="@drawable/backgroup"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/my_yijian"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/my_icon_feedback_default_xdpi"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_54"
            android:text="意见反馈"/>

        <ImageView
            android:id="@+id/my_banben"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/my_icon_version_default_xhdpi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_54"
            android:text="更新版本"/>
        <ImageView
            android:id="@+id/my_tuichu"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
             android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:src="@mipmap/my_icon_logout_default_xhdpi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_54"
            android:text="退出登录"/>
    </RelativeLayout>
</LinearLayout>