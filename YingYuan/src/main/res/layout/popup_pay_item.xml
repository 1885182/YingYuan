<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择支付方式"
            android:textSize="@dimen/dp_15"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:src="@mipmap/pay_icon_weixin_default_hdpi"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:text="微信支付"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:src="@mipmap/pay_icon_zhifubao_default_hdpi"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:text="支付宝支付"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/popup_pay_back_id"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/com_icon_down_default_xhdpi"/>
        <RadioGroup
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb1_weixin_id"
                android:layout_width="@dimen/dp_28"
                android:checked="true"
                android:layout_height="@dimen/dp_28" />
            <RadioButton
                android:id="@+id/rb2_zhifubao_id"
                android:layout_width="@dimen/dp_28"
                android:gravity="center"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_4"/>
        </RadioGroup>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_120"
        android:background="#F79D3E"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popup_pay_text_id"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"/>
    </LinearLayout>
</RelativeLayout>
