<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re08"
        android:layout_height="@dimen/dp_250">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_65"
            android:src="@mipmap/rectangle16"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:src="@mipmap/banner_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_weight="3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line4"
            android:background="@drawable/linear1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:id="@+id/pay_ting_id"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:layout_marginLeft="@dimen/dp_40"
                android:id="@+id/pay_begin_id"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/pay_end_id"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/rectangle1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可选"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_7"/>
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/rectangle3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选中"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_7"/>
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/rectangle2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_7"/>
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/hdpi11"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最佳观影区"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_7"/>
        </LinearLayout>
    </RelativeLayout>
    <com.bw.movie.custom.MoveSeatView
        android:background="#ffffff"
        android:layout_below="@id/re08"
        android:id="@+id/pay_moveView_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_80"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:layout_marginLeft="@dimen/dp_25"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="¥"/>
        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_40"
            android:text="0"
            android:id="@+id/pay_price_id"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#B31A54"/>
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/group2"
            android:id="@+id/pay_yes_id"
            android:layout_marginLeft="@dimen/sp_25"/>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/group3"
            android:id="@+id/pay_close_id"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
</RelativeLayout>