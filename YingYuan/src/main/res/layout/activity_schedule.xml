<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:text="11111"
        android:textSize="@dimen/sp_18"
        android:id="@+id/schedule_movie_name_id"
        android:layout_marginLeft="@dimen/dp_15"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="11111"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_movie_address_id"
        android:layout_marginLeft="@dimen/dp_15"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@mipmap/movie_item_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_150">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/schedule_simple_id"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_120"
                android:padding="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/schedule_name_id"
                    android:text="11111"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/schedule_type_id"
                    android:text="11111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/schedule_direct_id"
                    android:text="11111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/schedule_time_id"
                    android:text="11111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/detail_address_id"
                    android:text="11111"/>
            </LinearLayout>
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/schedule_recycler_id"></android.support.v7.widget.RecyclerView>
</LinearLayout>