<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/backgroup"
        android:layout_marginTop="@dimen/dp_8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cineam_gou_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="啦啦啦啦"/>
        <TextView
            android:id="@+id/cineam_gou_yuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="国语3D"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/cineam_gou_name"/>
        <TextView
            android:id="@+id/cineam_gou_staTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:text="啦啦啦啦"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/cineam_gou_name"/>
        <TextView
            android:id="@+id/www"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:text="——"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_below="@+id/cineam_gou_name"
            android:layout_toRightOf="@+id/cineam_gou_staTime"/>
        <TextView
            android:id="@+id/endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:text="哈哈哈"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_below="@+id/cineam_gou_name"
            android:layout_toRightOf="@+id/www"/>
        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:text="end"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_below="@+id/cineam_gou_name"
            android:layout_toRightOf="@+id/endtime"/>

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_next_default_xhdpi"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_30"
            android:id="@+id/cineam_gou_image_id"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/cineam_gou_image_id"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="￥"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:id="@+id/cineam_gou_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_30"
                android:text="￥"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


